<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTimer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Dark</item>
        <item name="colorSecondary">@color/Light</item>
        <item name="android:textColor">@color/Text</item>
        <item name="haloColor">@color/Text</item>
        <item name="background">@color/Background</item>
    </style>

    <style name="Theme.MyTimer.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Theme.MyTimer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyTimer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyTimer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>